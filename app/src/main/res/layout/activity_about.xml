<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elika.myapplication999.AboutActivity">
    <TextView
        android:id="@+id/about_app_name"
        android:layout_width="250dp"
        android:layout_height="46dp"

        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:text="App Name: Library Application"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_description"
        android:layout_width="250dp"
        android:layout_marginLeft="50dp"
        android:layout_height="46dp"
        android:text="Description: An app to manage and control book loans"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/about_app_name" />

    <TextView
        android:id="@+id/about_author"
        android:layout_width="250dp"
        android:layout_marginLeft="50dp"
        android:layout_height="46dp"
        android:text="Author: Shira Kirshenboim"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/about_description" />

    <TextView
        android:id="@+id/about_app_version"
        android:layout_width="250dp"
        android:layout_marginLeft="50dp"
        android:layout_height="46dp"
        android:text="Version: 1.0.0"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/about_author" />

</android.support.constraint.ConstraintLayout>

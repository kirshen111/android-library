<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elika.myapplication999.AddBookActivity">
    <EditText
        android:id="@+id/add_book_book_name"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Book Name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_book_author"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Author"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_book_book_name" />

    <EditText
        android:id="@+id/add_book_genre"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Genre"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_book_author" />


    <Button
        android:id="@+id/add_book_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"

        android:onClick="on_book_add"
        android:text="Add Book"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_book_genre" />
</android.support.constraint.ConstraintLayout>

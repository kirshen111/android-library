<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elika.myapplication999.RegistrationActivity">

    <EditText
        android:id="@+id/registration_user_name"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="User Name"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registration_password"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Password"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_user_name" />

    <EditText
        android:id="@+id/registration_first_name"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="First Name"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_password" />

    <EditText
        android:id="@+id/registration_last_name"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Last Name"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_first_name" />

    <EditText
        android:id="@+id/registration_city"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="City"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_last_name" />

    <EditText
        android:id="@+id/registration_address"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Address"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_city" />

    <EditText
        android:id="@+id/registration_email"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:hint="Email"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_address"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/registration_image"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginTop="56dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_email" />

    <Button
        android:id="@+id/registration_upload_image"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"

        android:onClick="on_upload_image"
        android:text="Upload Image"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_image" />

    <Button
        android:id="@+id/registration_create_image"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:onClick="on_taking_picture"
        android:text="Take Picture"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_image" />
    <Button
        android:id="@+id/registration_preview_password"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:onClick="on_preview_click"
        android:text="Preview"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_upload_image" />

    <CheckBox
        android:id="@+id/registration_preview_checkBox_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Loaner"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_email" />

</android.support.constraint.ConstraintLayout>
